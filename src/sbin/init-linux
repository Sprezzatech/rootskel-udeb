#!/bin/sh -e
# Set up filesystem as root and pivot into it.
export PATH
. /lib/debian-installer/init-debug
debugshell "just booted"

echo "Setting up filesystem, please wait ..."

mount /proc
umount initrd 2>/dev/null || true
if mount -t tmpfs -o size=100M tmpfs /mnt ; then
	:
elif mount -t shm shm mnt; then
	:
else
	mount -t ramfs ramfs /mnt
fi
umount /proc
cp -a $(ls -1 / | grep -v '\(lost+found\|mnt\|proc\)') /mnt
cd /mnt
pivot_root . initrd
mkdir -p /proc
mount /proc
mkdir -p /sys
mount /sys

/lib/debian-installer/start-udev
# kill off the " || true"'s once this is tested FIXME
mknod -m 640 /dev/mem c 1 1 || true
mknod -m 666 /dev/null c 1 3 || true
mknod -m 666 /dev/port c 1 4 || true
mknod -m 666 /dev/zero c 1 5 || true
mknod -m 666 /dev/random c 1 8 || true
mknod -m 666 /dev/urandom c 1 9 || true
mknod -m 666 /dev/tty c 5 0 || true
mknod -m 600 /dev/console 5 1 || true
mknod -m 640 /dev/tty1 c 4 1 || true
mknod -m 640 /dev/tty2 c 4 1 || true
mknod -m 640 /dev/tty3 c 4 1 || true
mknod -m 640 /dev/tty4 c 4 1 || true
mknod -m 640 /dev/tty5 c 4 1 || true
mknod -m 640 /dev/tty6 c 4 1 || true
mknod -m 640 /dev/tty7 c 4 1 || true
mknod -m 640 /dev/tty8 c 4 1 || true
mknod -m 640 /dev/tty9 c 4 1 || true
mknod -m 666 /dev/vcs c 7 0 || true
mknod -m 660 /dev/vcs1 c 7 1 || true
mknod -m 660 /dev/vcs2 c 7 2 || true
mknod -m 660 /dev/vcs3 c 7 3 || true
mknod -m 660 /dev/vcs4 c 7 4 || true
mknod -m 660 /dev/vcs5 c 7 5 || true
mknod -m 660 /dev/vcs6 c 7 6 || true
# end experiment

# Close all open files on the initrd, and run busybox init.
debugshell "before init"
exec /usr/sbin/chroot . /bin/busybox init < /dev/console > /dev/console 2>&1
